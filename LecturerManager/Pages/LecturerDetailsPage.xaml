<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:KMA.ProgrammingInCSharp2026.LecturerManager.UIModels;assembly=LecturerManager.UIModels"
             x:Class="KMA.ProgrammingInCSharp2026.LecturerManager.Pages.LecturerDetailsPage"
             x:DataType="models:LecturerUIModel"
             Title="LecturerDetailsPage">
    <ScrollView>
        <VerticalStackLayout Padding="10,20" Spacing="10">
            <Label
                Text="First Name"/>
            <Label
                Text="{Binding FirstName}"
                Margin="10,0"></Label>
            <Label
                Text="Last Name"/>
            <Label
                Text="{Binding LastName}"
                Margin="10,0"></Label>
            <Label
                Text="Position"/>
            <Label
                Text="{Binding Position, Converter={StaticResource EnumToDisplayName}}"
                Margin="10,0"></Label>
            <Label
                Text="Date of birth"/>
            <Label
                Text="{Binding DateOfBirth, StringFormat='{0:MMMM dd, yyyy}'}"
                Margin="10,0"></Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>