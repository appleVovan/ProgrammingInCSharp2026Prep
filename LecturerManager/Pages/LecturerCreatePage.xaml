<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMA.ProgrammingInCSharp2026.LecturerManager.Pages.LecturerCreatePage"
             Title="Lecturer Create Page">
    <VerticalStackLayout>
        <Label
            Text="First Name"/>
        <Entry
            Placeholder="First Name"></Entry>
        <Label
            Text="Last Name"/>
        <Entry
            Placeholder="Last Name"></Entry>
        <Label
            Text="Position"/>
        <Picker
            Title="Select Lecturer's position"></Picker>
        <Label
            Text="Date of birth"/>
        <DatePicker
            Date="{x:Null}"></DatePicker>
    </VerticalStackLayout>
</ContentPage>