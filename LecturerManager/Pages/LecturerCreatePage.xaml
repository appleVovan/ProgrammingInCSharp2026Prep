<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KMA.ProgrammingInCSharp2026.LecturerManager.Pages.LecturerCreatePage"
             Title="Lecturer Create Page">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Stroke="Black" StrokeThickness="4" VerticalOptions="Fill"/>
        <Border Grid.Row="1" Stroke="Blue" StrokeThickness="4" VerticalOptions="Fill">
            <Entry Placeholder="Enter text 1" VerticalOptions="Start" HorizontalOptions="Fill"></Entry>
        </Border>
        <Border  Grid.Row="2" Stroke="Brown" StrokeThickness="4" VerticalOptions="Fill">
            <Entry Placeholder="Enter text 2" VerticalOptions="End" HorizontalOptions="Fill"></Entry>
        </Border>
        <Border  Grid.Row="3" Stroke="Red" StrokeThickness="4" VerticalOptions="Fill"/>
    </Grid>
</ContentPage>